{% extends 'base.html.twig' %}

{% block body %}
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{{ asset('user/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="container">
      <input type="checkbox" id="flip">
      <div class="cover">
        <div class="front">
          <img src="{{ asset('user/images/frontImg.jpg') }}" alt="">
          <div class="text">
            <span class="text-1">Every new friend is a <br> new adventure</span>
            <span class="text-2">Let's get connected</span>
          </div>
        </div>
        <div class="back">
          <img class="backImg" src="{{ asset('user/images/backImg.jpg') }}" alt="">
          <div class="text">
            <span class="text-1">Complete miles of journey <br> with one step</span>
            <span class="text-2">Let's get started</span>
          </div>
        </div>
      </div>

      <div class="forms">
        <div class="form-content">
          <div class="signup-form">
            <div class="title">Signup</div>

            <!-- Flash Message for Errors -->
            {% for flash_error in app.flashes('verify_email_error') %}
              <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
              <div class="input-boxes">
                <div class="input-box">
                  <i class="fas fa-envelope"></i>
                  {{ form_widget(registrationForm.email, { 'attr': {'placeholder': 'Enter your email'} }) }}
                </div>
                <div class="input-box">
                  <i class="fas fa-lock"></i>
                  {{ form_widget(registrationForm.plainPassword, { 'attr': {'placeholder': 'Enter your password'} }) }}
                </div>
                <div class="button input-box">
                  <input type="submit" value="Signup">
                </div>
              </div>
            {{ form_end(registrationForm) }}

          </div>
        </div>
      </div>
    </div>
  </body>
</html>
{% endblock %}
